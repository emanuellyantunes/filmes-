let campoIdade;
let campoFantasia;
let campoAventura;

function setup() {
  createCanvas(800, 400);
  createElement("h2", "Recomendador de filmes");
  createSpan("Sua idade:");
  campoIdade = createInput("6");
  campoComédia = createCheckbox("Gosta de comédia");
  campoAventura = createCheckbox("Gosta de aventura?");
  campoDesenho = createCheckbox("Gosta de desenho?");
}

function draw() {
  background("white");
  let idade = campoIdade.value();
  let gostaDeComédia = campoComédia.checked();
  let gostaDeAventura = campoAventura.checked();
  let gostaDeDesenho = campoDesenho.checked();
  let recomendacao = geraRecomendacao(idade, gostaDeComédia, gostaDeAventura, gostaDeDesenho);
  
  fill(color(76, 0, 115));
  textAlign(CENTER, CENTER);
  textSize(38);
  text(recomendacao, width / 2, height / 2);
}

function geraRecomendacao(idade, gostaDeComédia, gostaDeAventura, gostaDeDesenho) {
  if (idade >= 12) {
    if (idade >= 18) {
      return "Gente Grande";
    } else {
      if (idade >= 12) {
        if(gostaDeComédia || gostaDeAventura) {
          return "Guardiões da Galáxia";          
        } else{
         return "Homem-Aranha: Sem Volta para Casa";
        }
      } else {
        if (gostaDeDesenho) {
          return "Meu Malvado Favorito";
        } else {
          return "Enrolados";
        }
      }
    }
  } else {
    if (gostaDeAventura) {
      return "Donzela";
    } else {
      return "Pantera Negra";
    }
  }
}
